// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  picture   String?
  createdAt DateTime @default(now())
}

model Text {
  id     String @id @default(cuid())
  text   String
  author String
  title  String
  image  String
}
